---
import Layout from '../Layout.astro';
---

<Layout title="BLACKPINK - Concerts & Tours">

    <main>
        <section class="tour-section fade-in">
            <h1 class="page-title">World Tour</h1>
            <p class="page-subtitle">BLACKPINK In Your Area</p>
            <div class="tour-grid">
                <div class="tour-top">
                    <h3>36+</h3>
                    <p>Cities Visited</p>
                </div>
                <div class="tour-top">
                    <h3>1.8M+</h3>
                    <p>Fans Attended</p>
                </div>
                <div class="tour-top">
                    <h3>5</h3>
                    <p>Continents</p>
                </div>
            </div>
        </section>

        <section class="tour-section2 fade-in-right">
            <h2 class="section-title">Upcoming Events 2025</h2>
            <p class="section-subtitle">Get ready to see BLACKPINK live!</p>
            
            <div class="tour-list">
                <div class="tour-card">
                    <div class="tour-date">
                        <span class="month">APRIL</span>
                        <span class="day">12-13</span>
                        <span class="year">2025</span>
                    </div>
                    <div class="tour-details">
                        <h3 class="tour-event">Coachella Valley Music Festival</h3>
                        <div class="tour-location">
                            <span>&#128205;</span>
                            <span>Indio, California, USA</span>
                        </div>
                        <div class="tour-venue">Empire Polo Club</div>
                        <div class="tour-status confirmed">Confirmed</div>
                        <p class="tour-description">
                            BLACKPINK returns to Coachella for their third appearance, headlining the festival 
                            alongside other major artists. This historic performance marks their continued dominance 
                            in the global music scene.
                        </p>
                    </div>
                    <div class="tour-button">
                        <button class="tour-btn primary">Get Tickets</button>
                        <button class="tour-btn secondary">More Info</button>
                    </div>
                </div>

                <div class="tour-card">
                    <div class="tour-date">
                        <span class="month">MAY</span>
                        <span class="day">20</span>
                        <span class="year">2025</span>
                    </div>
                    <div class="tour-details">
                        <h3 class="tour-event">Music Bank World Tour in Paris</h3>
                        <div class="tour-location">
                            <span>&#128205;</span>
                            <span>Paris, France</span>
                        </div>
                        <div class="tour-venue">Accor Arena</div>
                        <div class="tour-status confirmed">Confirmed</div>
                        <p class="tour-description">
                            Special appearance at Music Bank's world tour stop in Paris. BLACKPINK will perform 
                            their biggest hits alongside other top K-pop artists, bringing the energy of Korean 
                            music shows to European fans.
                        </p>
                    </div>
                    <div class="tour-button">
                        <button class="tour-btn primary">Get Tickets</button>
                        <button class="tour-btn secondary">More Info</button>
                    </div>
                </div>

                <div class="tour-card">
                    <div class="tour-date">
                        <span class="month">JUNE</span>
                        <span class="day">08-09</span>
                        <span class="year">2025</span>
                    </div>
                    <div class="tour-details">
                        <h3 class="tour-event">Summer Sonic Festival</h3>
                        <div class="tour-location">
                            <span>&#128205;</span>
                            <span>Tokyo & Osaka, Japan</span>
                        </div>
                        <div class="tour-venue">Multiple Venues</div>
                        <div class="tour-status confirmed">Confirmed</div>
                        <p class="tour-description">
                            Headlining one of Japan's biggest music festivals across two cities. BLACKPINK's 
                            massive Japanese fanbase will get to experience their electrifying performances 
                            alongside international rock and pop acts.
                        </p>
                    </div>
                    <div class="tour-button">
                        <button class="tour-btn primary">Get Tickets</button>
                        <button class="tour-btn secondary">More Info</button>
                    </div>
                </div>

                <div class="tour-card">
                    <div class="tour-date">
                        <span class="month">JULY</span>
                        <span class="day">15</span>
                        <span class="year">2025</span>
                    </div>
                    <div class="tour-details">
                        <h3 class="tour-event">Hyde Park British Summer Time</h3>
                        <div class="tour-location">
                            <span>&#128205;</span>
                            <span>London, United Kingdom</span>
                        </div>
                        <div class="tour-venue">Hyde Park</div>
                        <div class="tour-status confirmed">Confirmed</div>
                        <p class="tour-description">
                            First-ever K-pop group to headline Hyde Park's British Summer Time festival. 
                            This milestone performance will showcase BLACKPINK's global impact and bring 
                            K-pop to one of the UK's most prestigious outdoor venues.
                        </p>
                    </div>
                    <div class="tour-button">
                        <button class="tour-btn primary">Get Tickets</button>
                        <button class="tour-btn secondary">More Info</button>
                    </div>
                </div>

                <div class="tour-card">
                    <div class="tour-date">
                        <span class="month">AUG</span>
                        <span class="day">25-26</span>
                        <span class="year">2025</span>
                    </div>
                    <div class="tour-details">
                        <h3 class="tour-event">World Tour - Seoul Finale</h3>
                        <div class="tour-location">
                            <span>&#128205;</span>
                            <span>Seoul, South Korea</span>
                        </div>
                        <div class="tour-venue">Gocheok Sky Dome</div>
                        <div class="tour-status announced">Just Announced</div>
                        <p class="tour-description">
                            Coming home! BLACKPINK concludes their world tour with a special two-night 
                            finale in Seoul. These homecoming shows promise surprise guests, special stages, 
                            and unforgettable moments for Korean BLINKs.
                        </p>
                    </div>
                    <div class="tour-button">
                        <button class="tour-btn primary">Pre-Sale Info</button>
                        <button class="tour-btn secondary">More Info</button>
                    </div>
                </div>
            </div>
        </section>

        <section class="tour-section3 fade-in-right">
            <h2 class="section-title">Tour History</h2>
            <p class="section-subtitle">A journey through BLACKPINK's legendary performances</p>
            
            <div class="timeline">
                <div class="timeline-item">
                    <div class="timeline-dot"></div>
                    <div class="timeline-content">
                        <h3>BORN PINK World Tour</h3>
                        <span class="timeline-year">2022-2023</span>
                        <p>
                            The most successful tour by a Korean girl group in history. Spanning 36 cities across 
                            5 continents with 1.8 million fans in attendance. The tour broke numerous records and 
                            solidified BLACKPINK's status as global superstars.
                        </p>
                        <div class="tour-highlights">
                            <span class="highlight-badge">36 Cities</span>
                            <span class="highlight-badge">66 Shows</span>
                            <span class="highlight-badge">1.8M Fans</span>
                        </div>
                    </div>
                </div>

                <div class="timeline-item">
                    <div class="timeline-dot"></div>
                    <div class="timeline-content">
                        <h3>BLACKPINK World Tour [In Your Area]</h3>
                        <span class="timeline-year">2018-2020</span>
                        <p>
                            Their first world tour visiting Asia, North America, Europe, and Oceania. This tour 
                            marked BLACKPINK's emergence as a global phenomenon, with sold-out shows across 
                            major cities worldwide.
                        </p>
                        <div class="tour-highlights">
                            <span class="highlight-badge">23 Cities</span>
                            <span class="highlight-badge">32 Shows</span>
                            <span class="highlight-badge">Sold Out</span>
                        </div>
                    </div>
                </div>

                <div class="timeline-item">
                    <div class="timeline-dot"></div>
                    <div class="timeline-content">
                        <h3>Coachella 2019</h3>
                        <span class="timeline-year">2019</span>
                        <p>
                            Historic performance as the first K-pop girl group to perform at Coachella Valley 
                            Music and Arts Festival. This groundbreaking appearance introduced BLACKPINK to 
                            mainstream Western audiences and set the stage for K-pop's global expansion.
                        </p>
                        <div class="tour-highlights">
                            <span class="highlight-badge">Historic</span>
                            <span class="highlight-badge">First K-pop Girl Group</span>
                            <span class="highlight-badge">100K+ Attendance</span>
                        </div>
                    </div>
                </div>

                <div class="timeline-item">
                    <div class="timeline-dot"></div>
                    <div class="timeline-content">
                        <h3>BLACKPINK Arena Tour</h3>
                        <span class="timeline-year">2018</span>
                        <p>
                            Japanese arena tour showcasing BLACKPINK's massive popularity in Japan. Playing 
                            major venues across Japanese cities, this tour demonstrated their ability to fill 
                            large arenas just two years after debut.
                        </p>
                        <div class="tour-highlights">
                            <span class="highlight-badge">7 Cities</span>
                            <span class="highlight-badge">12 Shows</span>
                            <span class="highlight-badge">200K+ Fans</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="tour-gallery fade-in-up">
            <h2 class="section-title">Tour Highlights</h2>
            <div class="gallery-grid">
                <div class="gallery-item">
                    <div class="placeholder-gallery" style="background: linear-gradient(135deg, #ff1493, #ff69b4);">
                        <span class="gallery-text">ðŸŽ¤ Stage Performance</span>
                    </div>
                </div>
                <div class="gallery-item">
                    <div class="placeholder-gallery" style="background: linear-gradient(135deg, #c71585, #ff1493);">
                        <span class="gallery-text">Fan Moments</span>
                    </div>
                </div>
                <div class="gallery-item">
                    <div class="placeholder-gallery" style="background: linear-gradient(135deg, #ff69b4, #ffb6d9);">
                        <span class="gallery-text">Light Show</span>
                    </div>
                </div>
                <div class="gallery-item">
                    <div class="placeholder-gallery" style="background: linear-gradient(135deg, #ff1493, #c71585);">
                        <span class="gallery-text">Group Shot</span>
                    </div>
                </div>
                <div class="gallery-item">
                    <div class="placeholder-gallery" style="background: linear-gradient(135deg, #ffb6d9, #ff1493);">
                        <span class="gallery-text">Special Effects</span>
                    </div>
                </div>
                <div class="gallery-item">
                    <div class="placeholder-gallery" style="background: linear-gradient(135deg, #c71585, #ff69b4);">
                        <span class="gallery-text">Arena View</span>
                    </div>
                </div>
            </div>
        </section>

        <section class="tour-newsletter fade-in-up">
            <h2>Never Miss a Show</h2>
            <p>Subscribe to get notified about new tour dates and ticket sales</p>
            <div class="newsletter-form">
                <input type="email" placeholder="Enter your email address" class="newsletter-input">
                <button class="newsletter-btn">Subscribe</button>
            </div>
        </section>
    </main>

   
</Layout>